{
  "Poller": {
    "Download": {
      "DownloadMedia": [
        "jpg",
        "jpeg",
        "png"
      ],
      "Location": "MonitoredPostMedias"
    },
    "NbPostToMonitor": 100,
    "SubToWatch": "r/AskReddit"
  },
  "PostUpdater": {
    "PeriodicityInSeconds": 5,
    "NbIterationOnPost": 5,
    "TimeBetweenFetchInSeconds": 60,
    "InactivityTimeoutInHours": 24,
    "SimultaneousFetchRequest": 6
  },
  "Reddit": {
    "ClientId": "reddit_client_id",
    "ClientSecret": "reddit_client_secret",
    "RedirectUri": "leredirecturi",
    "Username": "reddit_username",
    "UserPassword": "reddit_user_password"
  },
  "DatabaseSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "RPMonitor",
    "MonitoredPostsCollectionName": "MonitoredPosts",
    "MonitoredPostVersionsCollectionName": "MonitoredPostVersions"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ]
  }
}